<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.itmotors.stentormobile.ControlActivity"
    android:orientation="vertical"
    android:background="#000000">

    <TextView
        android:id="@+id/remote_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:text="НЕТ СВЯЗИ"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ea0903"
        android:textStyle="bold" />
    <!--кружочки-->
    <TableLayout
        android:layout_marginHorizontal="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tableLayout2">
        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_weight="1"
                android:id="@+id/gridLayout1">
                <RelativeLayout
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:id="@+id/relativeLayout1">
                    <ImageView
                        android:src="@drawable/oval"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_centerInParent="true"
                        android:id="@+id/imageView2" />

                    <ProgressBar
                        android:id="@+id/ringPB"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:layout_centerInParent="true"
                        android:background="@drawable/background_progress_bar"
                        android:indeterminate="false"
                        android:max="100"
                        android:progressDrawable="@drawable/round_progress_bar" />
                    <GridLayout
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:id="@+id/g_testimony_0">
                        <ImageView
                            android:src="@drawable/border_of_triangle"
                            android:id="@+id/t_up_0"
                            android:layout_width="40dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/triangle"
                            android:layout_column="0"
                            android:layout_row="0"/>
                        <TextView
                            android:text="овальн/ТС"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/text_testimony_0"
                            android:layout_column="0"
                            android:layout_row="1"
                            android:gravity="center_horizontal"
                            android:textColor="#ff000000"
                            android:textStyle="bold" />
                        <TextView
                            android:text="98.76"
                            android:id="@+id/tv_testimony_0"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_column="0"
                            android:layout_row="2"
                            android:gravity="center_horizontal"
                            android:background="@android:color/background_dark"
                            android:textStyle="bold"
                            android:textColor="#fa0100"
                            android:textSize="16dp" />
                        <ImageView
                            android:src="@drawable/border_of_triangle"
                            android:layout_width="40dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_horizontal"
                            android:id="@+id/tr_down_testimony_0"
                            android:background="@drawable/triangle"
                            android:layout_column="0"
                            android:layout_row="3"
                            android:rotation="180"
                            android:layout_margin="5dp"/>
                    </GridLayout>
                </RelativeLayout>
                <TextView
                    android:text="раб/стоян/запасн"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_PB_1"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:textStyle="bold"
                    android:textColor="#ffffff" />
            </GridLayout>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_weight="1"
                android:id="@+id/gridLayout2">
                <RelativeLayout
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:id="@+id/relativeLayout2">
                    <ImageView
                        android:src="@drawable/oval"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_centerInParent="true"
                        android:id="@+id/imageView1" />

                    <ProgressBar
                        android:id="@+id/circlePB"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:layout_centerInParent="true"
                        android:background="@drawable/background_progress_bar"
                        android:indeterminate="false"
                        android:max="100"
                        android:progressDrawable="@drawable/round_progress_bar" />
                    <GridLayout
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:id="@+id/g_testimony_1">
                        <ImageView
                            android:src="@drawable/border_of_triangle"
                            android:id="@+id/t_up_1"
                            android:background="@drawable/triangle"
                            android:layout_width="40dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_row="0"
                            android:layout_column="0"/>
                        <TextView
                            android:text="овальн/ТС"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_row="1"
                            android:layout_column="0"
                            android:gravity="center_horizontal"
                            android:textColor="#ff000000"
                            android:textStyle="bold"
                            android:id="@+id/text_testimony_1" />
                        <TextView
                            android:text="98.76"
                            android:id="@+id/tv_testimony_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_row="2"
                            android:layout_column="0"
                            android:gravity="center_horizontal"
                            android:background="@android:color/background_dark"
                            android:textStyle="bold"
                            android:textColor="#fa0100"
                            android:textSize="16dp"/>
                        <ImageView
                            android:src="@drawable/border_of_triangle"
                            android:id="@+id/tr_down_testimony_1"
                            android:background="@drawable/triangle"
                            android:layout_width="40dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_row="3"
                            android:layout_column="0"
                            android:rotation="180"
                            android:layout_margin="5dp"/>
                    </GridLayout>
                </RelativeLayout>
                <TextView
                    android:text="легк/груз/авария"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:id="@+id/text_PB_2"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:textStyle="bold"
                    android:textColor="#ffffff" />

            </GridLayout>
        </TableRow>
    </TableLayout>
    <!--линия-->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#4d4d4d"
        android:layout_marginTop="5dp"
        android:id="@+id/divider" />
    <!--сообщение-->
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1"
        android:id="@+id/tableLayout3">
        <TableRow
            android:id="@+id/tableRow6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/someText"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="ОСЬ N"
                android:textColor="#ea0903"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/connectionState"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Нет соединения"
                android:textColor="#EA0903"
                android:textStyle="bold" />
        </TableRow>

    </TableLayout>

    <!--кнопки-->


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="3"
        android:rowCount="4"
        android:padding="3dp"
        android:background="#4d4d4d"
        android:id="@+id/buttons">
        <!--ПУСК ЛЕВ-->
        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:background="@drawable/rectangle"
            android:layout_margin="8px"
            android:padding="10px"
            android:clickable="true"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:orientation="vertical"
            android:id="@+id/start_left">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="@drawable/start_left"
                android:layout_weight=".8"
                android:layout_gravity="center"/>
            <TextView
                android:text="ПУСК ЛЕВ"
                android:textColor="@android:color/background_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".1"
                android:layout_gravity="center"
                android:textStyle="bold" />
        </LinearLayout>
        <!--ПУСК-->
        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:background="@drawable/rectangle"
            android:layout_margin="8px"
            android:padding="10px"
            android:clickable="true"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:orientation="vertical"
            android:id="@+id/start">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="@drawable/start"
                android:layout_weight=".8"
                android:layout_gravity="center"/>
            <TextView
                android:text="ПУСК"
                android:textColor="@android:color/background_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".1"
                android:layout_gravity="center"
                android:textStyle="bold" />
        </LinearLayout>
        <!--ПУСК ПРАВ-->
        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:background="@drawable/rectangle"
            android:layout_margin="8px"
            android:padding="10px"
            android:clickable="true"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:orientation="vertical"
            android:id="@+id/start_right">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="@drawable/start_right"
                android:layout_weight=".8"
                android:layout_gravity="center"/>
            <TextView
                android:text="ПУСК ПРАВ"
                android:textColor="@android:color/background_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".1"
                android:layout_gravity="center"
                android:textStyle="bold" />
        </LinearLayout>
        <!--ОВАЛЬН-->
        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:background="@drawable/rectangle"
            android:layout_margin="8px"
            android:padding="10px"
            android:clickable="true"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:orientation="vertical"
            android:id="@+id/elipse">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="@drawable/elipse"
                android:layout_weight=".8"
                android:layout_gravity="center"/>
            <TextView
                android:text="ОВАЛЬН"
                android:textColor="@android:color/background_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".1"
                android:layout_gravity="center"
                android:textStyle="bold" />
        </LinearLayout>
        <!--ВЫБОР СИСТЕМЫ-->
        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:background="@drawable/rectangle"
            android:layout_margin="8px"
            android:padding="10px"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:orientation="vertical"
            android:clickable="true"
            android:id="@+id/system_selection">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="@drawable/system_selection"
                android:layout_weight=".8"
                android:layout_gravity="center"/>
            <TextView
                android:text="ВЫБОР СИСТЕМЫ"
                android:singleLine="false"
                android:textColor="@android:color/background_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textAlignment="center"/>
        </LinearLayout>
        <!--СОХРАН-->
        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:background="@drawable/rectangle"
            android:layout_margin="8px"
            android:padding="10px"
            android:clickable="true"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:orientation="vertical"
            android:id="@+id/save">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="@drawable/save"
                android:layout_weight="1"
                android:layout_gravity="center"/>
            <TextView
                android:text="СОХРАН"
                android:textColor="@android:color/background_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:layout_gravity="center"
                android:textStyle="bold" />
        </LinearLayout>
        <!--ГРУЗ/ЛЕГК-->
        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:background="@drawable/rectangle"
            android:layout_margin="8px"
            android:padding="10px"
            android:clickable="true"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:orientation="vertical"
            android:id="@+id/car">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="@drawable/car"
                android:layout_weight="1"
                android:layout_gravity="center"/>
            <TextView
                android:text="ГРУЗ/ЛЕГК"
                android:textColor="@android:color/background_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:layout_gravity="center"
                android:textStyle="bold" />
        </LinearLayout>
        <!--СТОП-->
        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:background="@drawable/rectangle"
            android:layout_margin="8px"
            android:padding="10px"
            android:clickable="true"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:orientation="vertical"
            android:id="@+id/stop">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="@drawable/stop"
                android:layout_weight=".8"
                android:layout_gravity="center"/>
            <TextView
                android:text="СТОП"
                android:textColor="@android:color/background_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".1"
                android:layout_gravity="center"
                android:textStyle="bold" />
        </LinearLayout>
        <!--ОКОНЧ-->
        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:background="@drawable/rectangle"
            android:layout_margin="8px"
            android:padding="10px"
            android:clickable="true"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:orientation="vertical"
            android:id="@+id/end">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="@drawable/end"
                android:layout_weight=".8"
                android:layout_gravity="center"/>
            <TextView
                android:text="ОКОНЧ"
                android:textColor="@android:color/background_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".1"
                android:layout_gravity="center"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="2dp"
            android:background="@drawable/rectangle"
            android:layout_margin="8px"
            android:padding="10px"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="2"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="@drawable/arrow_up"
                android:layout_weight=".5"
                android:layout_gravity="center"
                android:clickable="true"
                android:id="@+id/axis_up"/>
            <TextView
                android:text="ОСЬ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="#ff000000" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="@drawable/arrow_down"
                android:layout_weight=".5"
                android:layout_gravity="center"
                android:clickable="true"
                android:id="@+id/axis_down"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="2dp"
            android:background="@drawable/rectangle"
            android:layout_margin="8px"
            android:padding="10px"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="2"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="@drawable/arrow_up"
                android:layout_weight=".5"
                android:layout_gravity="center"
                android:clickable="true"
                android:id="@+id/num_up"/>
            <TextView
                android:text="ГОС.НОМЕР"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="#ff000000" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="@drawable/arrow_down"
                android:layout_weight=".5"
                android:layout_gravity="center"
                android:clickable="true"
                android:id="@+id/num_down"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="2dp"
            android:background="@drawable/rectangle"
            android:layout_margin="8px"
            android:padding="10px"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="2"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="@drawable/arrow_up"
                android:layout_weight=".5"
                android:layout_gravity="center"
                android:clickable="true"
                android:id="@+id/ind_up"/>
            <TextView
                android:text="ИНДИКАТОР"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="#ff000000" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="@drawable/arrow_down"
                android:layout_weight=".5"
                android:layout_gravity="center"
                android:clickable="true"
                android:id="@+id/ind_down"/>
        </LinearLayout>
    </GridLayout>

</LinearLayout>